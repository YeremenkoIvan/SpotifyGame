{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
      "prettier/prettier": ["error", { "semi": true, "tabWidth": 4 }],
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "indent": ["error", 4]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }